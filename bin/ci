#!/usr/bin/env bash
set -euo pipefail

echo "==> Installing dependencies"
bundle install --quiet

echo ""
echo "==> RuboCop"
bundle exec rubocop

echo ""
echo "==> Sorbet"
bundle exec srb tc

echo ""
echo "==> RBS"
bundle exec rbs -I sig -r bigdecimal -r date -r time validate

echo ""
echo "==> Tests"
bundle exec rake test

echo ""
echo "==> All checks passed"
